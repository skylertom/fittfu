<h1>Listing Players</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Team</th>
    <th>Delete</th>
  </tr>

  <% @players.each do |player| %>
      <tr>
        <td><%= link_to(player.name, player_path(player)) %></td>
        <td><%= player.gender_text %></td>
        <td>
          <%= player.team.blank? ? content_tag(:p, "Unassigned") : link_to(player.team.name, team_path(player.team)) %>
        </td>
        <td><%= button_to('x', player, method: :delete) %></td>
      </tr>
  <% end %>
</table>