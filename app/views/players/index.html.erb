<h1>Listing Players</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Team</th>
  </tr>

  <% @players.each do |player| %>
      <tr>
        <td><%= link_to(player.name, player_path(player)) %></td>
        <td><%= player.gender %></td>
        <td>
          <%= player.team.blank? ? "Unassigned" : link_to(player.team.name, team_path(player.team)) unless player.team.blank? %>
        </td>
      </tr>
  <% end %>
</table>