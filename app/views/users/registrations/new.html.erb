<div class="login centered">
      <h2 class="title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :name, autofocus: true, required: true, placeholder: "Name", class: "centered" %>

      <%= f.email_field :email, required: true, placeholder: "Tufts Email", class: "centered" %>

      <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "centered" %>

      <%= f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: "Confirm Password", class: "centered" %>
      <div class="actions">
        <%= f.submit "Sign up", data: { disable_with: "Please wait...." }, class: "centered btn blue" %>
      </div>
  <% end %>

  <div class="btn-container text-centered">
    <div class="btn btn-no-padding btn-gray">
      <%= link_to "Sign in", new_user_session_path %>
    </div>
  </div>
</div>