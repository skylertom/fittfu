<div class="login centered">
    <h2>fittfu scorekeeper</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "centered" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "centered" %>

          <!-- TODO: not urgent, figure out if rememberable is active -->
      <% if false && devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "centered btn" %>
      </div>
    <% end %>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot text-centered" %>
  <div class="btn-container text-centered">
      <div class="btn btn-gray">
        <%= link_to "Sign up", new_registration_path(resource_name) %>
      </div>
  </div>

</div>
