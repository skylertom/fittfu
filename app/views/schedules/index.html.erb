<div class="outerpadleftright">
    <h1>Schedule:</h1>

    <table class="table table-bordered table-hover">
      <tr>
        <th>Start Time:</th>
        <th>End Time:</th>
        <th>Delete</th>
      </tr>

      <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.start_time.to_s(:pretty) %></td>
            <td><%= schedule.end_time.to_s(:pretty) %></td>
            <td><%= button_to('x', schedule, method: :delete) %></td>
          </tr>
      <% end %>
    </table>
</div>