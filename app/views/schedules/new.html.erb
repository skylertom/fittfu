<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for :schedule, url: schedules_path do |f| %>
          <h2>Schedule a day</h2>
          <div>
            <label>Date:</label>
            <%= text_field_tag(:date, nil, placeholder: "YYYY-MM-DD", required: true) %>
          </div>
          <div>
            <label>Start:</label>
            <%= select_tag(:start_time, options_for_select(Schedule::VALID_STARTS), prompt: "Start Time") %>
          </div>
          <div>
            <label>End:</label>
            <%= select_tag(:end_time, options_for_select(Schedule::VALID_STARTS), prompt: "End Time") %>
          </div>
          <div>
            <%= f.submit "Submit", data: { disable_with: "Please wait...." } %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
      $("#date").datepicker({
          dateFormat: 'yy-mm-dd'
      });
  });
  $( "#start_time" ).selectmenu({
      width: 150
  });
  $( "#end_time" ).selectmenu({
      width: 150
  });
</script>