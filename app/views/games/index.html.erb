<table class="table table-bordered table-hover">
  <tr>
    <th>Matchup</th>
    <th>Week</th>
    <th>Day</th>
    <th>Time</th>
  </tr>

  <% @games.each do |game| %>
      <tr>
        <% if policy(game).scorekeep? %>
            <td><%= link_to(game.name, scorekeep_games_path(game)) if game.teams.any? %></td>
        <% else %>
            <td><%= link_to(game.name, game) if game.teams.any? %></td>
        <% end %>
        <td><%= game.week + 1 %></td>
        <td><%= game.time.blank? ? "Not scheduled yet" : game.time.to_s(:day_and_month) %></td>
        <td><%= game.time.blank? ? "#{(game.time_slot + 1).ordinalize} time slot" : game.time.to_s(:time) %></td>
      </tr>
  <% end %>
</table>