<h1>Listing Games</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Matchup</th>
    <th>Week</th>
    <th>Time slot</th>
    <th>Delete</th>
  </tr>

  <% @games.each do |game| %>
      <tr>
        <td><%= link_to(game.name, game) if game.teams.any? %></td>
        <td><%= game.week %></td>
        <td><%= game.time_slot %></td>
        <td><%= button_to('x', game, method: :delete) %></td>
      </tr>
  <% end %>
</table>