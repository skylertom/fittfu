<div class="outerpadleftright">
    <table class="table table-bordered table-hover table-nonfluid">
      <thead>
          <tr>
            <th>Team Name</th>
            <th>Color</th>
            <th>Wins</th>
            <th>Losses</th>
          </tr>
      </thead>
      <tbody>
      <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, team_path(team) %></td>
            <td><%= team.color %></td>
            <td><%= team.num_wins %></td>
            <td><%= team.num_losses %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
</div>

<script>
    $(document).ready(function()
        {
            $("table").tablesorter({
                sortList: [[2, 1]]
            });
        }
    );
</script>